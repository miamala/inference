{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Transaction",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["INCOME", "EXPENSE"]
    },
    "category": {
      "type": "string",
      "enum": ["Food", "Transport", "Entertainment", "Rent", "Groceries", "Salary", "Investment", "Other"]
    },
    "amount": {
      "type": "number",
      "minimum": 0
    }
  }
}
